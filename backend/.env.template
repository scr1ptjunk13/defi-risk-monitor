# DeFi Risk Monitor - Production Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5434/defi_risk_monitor

# BLOCKCHAIN RPC ENDPOINTS (REQUIRED)
# Get these from Alchemy: https://www.alchemy.com/
ALCHEMY_API_KEY=YOUR_ALCHEMY_API_KEY_HERE
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY_HERE

# Alternative: Infura (backup)
INFURA_API_KEY=YOUR_INFURA_PROJECT_ID_HERE
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID_HERE

# Multi-chain RPC Endpoints
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY_HERE
ARBITRUM_RPC_URL=https://arb-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY_HERE
BSC_RPC_URL=https://bsc-dataseed.binance.org/
OPTIMISM_RPC_URL=https://opt-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY_HERE

# WebSocket Endpoints for Real-time Data
ALCHEMY_WS_URL=wss://eth-mainnet.ws.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY_HERE
THE_GRAPH_WS_URL=wss://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3

# PRICE FEED APIs (OPTIONAL)
# CoinGecko: https://www.coingecko.com/en/api
COINGECKO_API_KEY=YOUR_COINGECKO_API_KEY_HERE

# CoinMarketCap: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY_HERE

# SECURITY (REQUIRED)
# Generate a strong random string (32+ characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024-make-it-long-and-random

# AI Service Configuration (OPTIONAL)
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_FALLBACK_ENABLED=true

# Application Configuration
RUST_LOG=info
PORT=8080
HOST=0.0.0.0

# CORS Configuration (for frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Monitoring Configuration
MONITORING_INTERVAL_SECONDS=30
HEALTH_CHECK_INTERVAL_SECONDS=60
METRICS_RETENTION_DAYS=30

# Feature Flags
ENABLE_REAL_TIME_MONITORING=true
ENABLE_WEBSOCKET_STREAMING=true
ENABLE_PRICE_FEED_AGGREGATION=true
ENABLE_MEV_PROTECTION=true
ENABLE_CROSS_CHAIN_ANALYSIS=true
